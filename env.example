# ============================================
# DATABASE CONFIGURATION
# Используется база данных из dating_api/docker-compose.yml
# Вариант 1: Использовать host.docker.internal (если контейнеры в разных сетях)
# DATABASE_URL=postgresql://postgres:postgres@host.docker.internal:5435/postgres
# Вариант 2: Использовать имя контейнера (если контейнеры в одной сети)
DATABASE_URL=postgresql://postgres:postgres@pg:5432/postgres
DATABASE_NAME=postgres

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# SECURITY CONFIGURATION
# ============================================
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production
